<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Startupdetails">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="80dp">

            <EditText
                android:id="@+id/editPatent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Patent ID"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <EditText
                android:id="@+id/editCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category e.g., Technology, Healthcare"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description about your startup"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editCompanyPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Period (0-9 years)"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editAnnualIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Annual Revenue"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />


            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:backgroundTint="?android:attr/colorPrimary"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
